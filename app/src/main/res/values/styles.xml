<resources>

    <!-- Base application theme. Adding Global Styles -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textViewStyle">@style/textView</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TemplateTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <!-- Global Styles -->
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/btn_floating</item>
    </style>

    <style name="textView">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ElegantNumberButton">
        <item name="backGroundColor">@color/cardBackground</item>
        <item name="textColor">@color/colorAccent</item>
        <item name="android:theme">@style/TemplateTheme</item>
    </style>

    <style name="RadioButtonCustomIcon">
        <item name="android:textColorPrimaryDisableOnly">@color/colorAccent</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColorPrimaryDisableOnly">@color/colorAccent</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>


    <!-- Element specific Styles -->
    <style name="heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Specific Styles -->
    <style name="toolbar_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/toolbarTitleColor</item>
    </style>


    <!-- Project Styles -->
    <style name="AppTheme.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">@color/toolbar</item>
    </style>

    <style name="AppTheme.NavigationBar">
        <item name="backgroundTint">@color/navigation</item>
    </style>

    <!-- Material Styles -->
    <style name="TextAppearance.MdcTypographyStyles.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
